<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:orientation="vertical">

    <ListView
        android:id="@+id/list_view_payment"
        android:layout_width="match_parent"
        android:layout_height="670sp">

    </ListView>

    <LinearLayout
        android:id="@+id/pagination_footer_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="21dp"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingHorizontal="21dp">

        <Button
            android:id="@+id/prev_page_payment"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:minHeight="0dp"
            android:contentDescription="Previous Page"/>

        <HorizontalScrollView
            android:id="@+id/page_number_scroll_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:paddingHorizontal="18dp">

            <LinearLayout
                android:id="@+id/btn_layout_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <Button
            android:id="@+id/next_page_payment"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_arrow_forward_ios_24"
            android:minHeight="0dp"
            android:contentDescription="Next Page"/>
    </LinearLayout>
</LinearLayout>